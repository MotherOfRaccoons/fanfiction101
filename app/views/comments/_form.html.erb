<h3>Add Comment</h3>

<%=form_for([@post, @post.comments.build], html: {autocomplete: 'off'}) do |f| %>
  <p>

    <%= f.label :username %><br>
    <%= f.text_field :username, {:class => 'form-control mb-3'} %>

    <%= f.label :body %><br>
    <%= f.text_area :body, {:class => 'form-control'} %>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-primary'}) %>
  </p>
<% end %>
