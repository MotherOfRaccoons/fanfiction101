<head>
  <link href="/app/views/devise/style/authorization.css" rel="stylesheet">
</head>

<body class="text-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-signin') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address"%>
  <div class="my-2">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
  </div>
  <div class="my-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation " %>
  </div>

  <div class="checkbox mb-3">
    <label>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
    </label>
  </div>
  <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block mb-3'%>
<% end %>
<%= render "devise/shared/links" %>

</body>
