<head>
  <link href="/app/views/devise/style/authorization.css" rel="stylesheet">
</head>

<body class="text-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>

  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address"%>

  <%= f.password_field :password, autocomplete: "current-password", class: "form-control my-2", placeholder: "Password" %>
  <div class="checkbox mb-3">

    <label>
      <% if devise_mapping.rememberable? %>
          <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
          </div>
      <% end %>
    </label>
  </div>
  <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block mb-3'%>

<% end %>
<%= render "devise/shared/links" %>

</body>
