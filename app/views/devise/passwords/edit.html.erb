<head>
  <link href="/app/views/devise/style/authorization.css" rel="stylesheet">
</head>

<body class="text-center">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'form-signin') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Change your password</h1>
  <div class="my-2">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
  </div>
  <div class="my-2">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation " %>
  </div>

  <%= f.submit "Change my password", class: 'btn btn-lg btn-primary btn-block mb-3'%>
<% end %>
<%= render "devise/shared/links" %>

</body>