<head>
  <link href="/app/views/devise/style/authorization.css" rel="stylesheet">
</head>

<body class="text-center">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'form-signin') do |f| %>

  <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address"%>

  <%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block mb-3 my-2'%>

<% end %>
<%= render "devise/shared/links" %>

</body>