<head>
  <link href="/app/views/devise/style/authorization.css" rel="stylesheet">
</head>

<body class="text-center">
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), class: 'form-signin') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Resend confirmation instructions</h1>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address"%>

  <%= f.submit "Resend confirmation instructions", class: 'btn btn-lg btn-primary btn-block mb-3 my-2'%>

<% end %>
<%= render "devise/shared/links" %>

</body>