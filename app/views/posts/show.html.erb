<div class="card mb-3">
  <div class="card-body">
    <h2 class="card-title" align="center"><%= @post.title %></h2>
    <p class="card-text"><%= @post.synopsis %></p>
  </div>
  <% if current_user && (current_user.admin || current_user.id == @post.user_id) %>
    <div class="text-center mb-3">
    <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-outline-primary mx-2' %>
    <%= link_to "Delete", post_path(@post),
                method: :delete,
                data: {title: "Yes", confirm: 'Are you sure?'},
                class: 'btn btn-outline-danger' %>
    </div>
    <% end %>
</div>

<hr>

<%= render 'comments/form' %>
<%= render 'comments/comments' %>
